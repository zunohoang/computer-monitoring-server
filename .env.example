# Environment variables cho docker-compose
# Copy file này thành .env và thay đổi các giá trị theo môi trường của bạn

# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username
IMAGE_TAG=latest

# PostgreSQL Configuration
POSTGRES_DB=ComputerMonitoring
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Production

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-here-min-32-chars-production-change-this
JWT_ISSUER=ComputerMonitoringAPI
JWT_AUDIENCE=ComputerMonitoringClients
JWT_EXPIRY_MINUTES=60
